{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "types": ["node"],
    "allowJs": false,
    "outDir": "../dist",
    "rootDir": "./",
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "declarationDir": "../dist/types"
  },
  "include": [
    "./lib/**/*.ts"
  ],
  "compileOnSave": true
}