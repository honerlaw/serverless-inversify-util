{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "types": ["node"],
    "allowJs": false,
    "outDir": "./bin",
    "rootDir": "./",
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "filesGlob": [
    "./**/*.ts"
  ],
  "compileOnSave": false
}